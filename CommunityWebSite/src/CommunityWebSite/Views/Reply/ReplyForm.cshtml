@model CommunityWebSite.Models.ViewModels.ReplyViewModel

<h1>Reply to this Message</h1>
Subject: @Model.Subject

<form asp-controller="Reply" asp-action="ReplyForm" method="post">
    <input asp-for="MessageID" type="hidden" />

    <label asp-for="MessageReply.Body"></label>
    <input asp-for="MessageReply.Body" />

    <button type="submit">Post</button>
</form>